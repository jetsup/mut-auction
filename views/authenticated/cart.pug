doctype html
head
  meta(charset='UTF-8')
  title My Cart | MUT Auctioneers
  link(rel='stylesheet' href='/stylesheets/home.css')
.head(style='background: radial-gradient(#ffd6d6, white);')
  .container
    include ../components/navbar.pug
// --------------- cart item details--------------------
.small-container.cart-page(style='margin: 80px auto;')
  table(style='width: 100%; border-collapse: collapse;')
    tr(style='text-align: left; padding: 5px; color: #fff; background: yellowgreen; font-weight: normal;')
      th Product
      th(style='text-align: right;') Quantity
      th(style='text-align: right;') Sub-Total
    tr
      td(style='padding: 10px 5px; text-align: right;')
        .cart-info(style='display: flex; flex-wrap: wrap;')
          img(style='width: 100px; height: 100px; margin-right: 10px;' src='/images/buy-1.jpg')
          div
            p Red Printed T-Shirt
            small Price: $50.00
            br
            a(style='color: #ff523b; font-size: 12px;' href='') Remove
      td(style='text-align: right;')
        input(style='width: 40px; height: 30px; padding: 5px;' type='number' value='1')
      td(style='text-align: right;') $50.00
  .total-price(style='display: flex; justify-content: flex-end; ')
    table(style='border-top: 3px solid #ff523b; width: 100%; max-width: 160px; ')
      tr
        td(style='text-align: right;') Sub_Total
        td(style='text-align: right;') $50.00
        button.btn(style='margin-right: 20px;') Check Out 
        //-- onclick=`checkOut(${product.id})`
// ---------------------Footer--------------------------
include ../components/footer.pug

script(type='module' src='js/ionicons.esm.js')
script(nomodule='' src='js/ionicons.js')